<Window x:Class="Graf.Views.PPM"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PPM" Height="800" Width="1200"
        Background="#0B0F1A" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="360" />
        </Grid.ColumnDefinitions>

        <!-- LEWA STRONA: podgląd obrazu + pasek statusu -->
        <Grid Grid.Column="0" ClipToBounds="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Obraz: proporcjonalne skalowanie, wysoka jakość -->
            <Border Background="#101624">
                <Image x:Name="displayedImage"
                       Grid.Row="0"
                       Stretch="Uniform"
                       RenderTransformOrigin="0.5,0.5"
                       UseLayoutRounding="True"
                       SnapsToDevicePixels="True"
                       MouseMove="OnImageMouseMove"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       RenderOptions.EdgeMode="Aliased"
                       />
            </Border>

            <!-- Pasek statusu z informacją o pikselu -->
            <Border Grid.Row="1" Background="#0E1422" Padding="10">
                <TextBlock x:Name="pixelInfoTextBlock"
                           Foreground="#DDE6FF"
                           FontFamily="Consolas"
                           FontSize="14"
                           Text="R: -, G: -, B: -   X: -  Y: -" />
            </Border>
        </Grid>

        <!-- Splitter między podglądem a panelem narzędzi -->
        <GridSplitter Grid.Column="1"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Background="#1E2742"
                      ShowsPreview="True" />

        <!-- PRAWY PANEL: narzędzia -->
        <Border Grid.Column="2" Background="#0F172A" Padding="18">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="Narzędzia"
                           Foreground="#E2E8F0"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,16" />

                <!-- Kompresja JPEG -->
                <StackPanel Grid.Row="1" Margin="0,0,0,16">
                    <TextBlock Text="Poziom kompresji (1–100)"
                               Foreground="#C7D2FE"
                               Margin="0,0,0,6" />
                    <TextBox x:Name="qualityTextBox"
                             Text="95"
                             Foreground="#E5E7EB"
                             Background="#0B1220"
                             BorderBrush="#374151"
                             Padding="8"
                             Width="120"
                             ToolTip="Im wyższa wartość, tym mniejsza kompresja i lepsza jakość." />
                </StackPanel>

                <!-- Przyciski akcji -->
                <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,8,0,8">
                    <Button Content="Wczytaj obraz"
                            Click="LoadImage_Click"
                            Margin="0,0,0,10"
                            Padding="10"
                            Background="#1F2937"
                            Foreground="#F9FAFB"
                            BorderBrush="#4B5563" />
                    <Button Content="Zapisz do JPEG"
                            Click="SaveToJPEG_Click"
                            Padding="10"
                            Background="#2563EB"
                            Foreground="White"
                            BorderBrush="#1D4ED8" />
                </StackPanel>

                <!-- Wskazówki -->
                <StackPanel Grid.Row="4" Margin="0,16,0,0">
                    <TextBlock Text="Wskazówki"
                               Foreground="#A5B4FC"
                               FontWeight="SemiBold"
                               Margin="0,0,0,6" />
                    <TextBlock Foreground="#93C5FD" TextWrapping="Wrap">
                        • Przytrzymaj Ctrl i użyj kółka myszy aby powiększać/zmniejszać.&#10;
                        • Przeciągnij obraz lewym przyciskiem myszy, aby przesunąć przy powiększeniu.&#10;
                        • Obsługiwane formaty wejściowe: PPM (P3, P6), JPEG.
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
