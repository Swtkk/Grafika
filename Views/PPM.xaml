<Window x:Class="Graf.Views.PPM"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modele barw – RGB ↔ CMYK" Height="580" Width="860" WindowStartupLocation="CenterScreen">
    <Border Background="#F4F7FB" Padding="14">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- NAGŁÓWEK -->
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                       Text="Wybierz wartości po LEWEJ (RGB) lub po PRAWEJ (CMYK) — konwersja liczy się automatycznie"
                       Foreground="#334" FontWeight="SemiBold" Margin="4,0,0,12"/>

            <!-- RGB (WEJŚCIE) -->
            <GroupBox Grid.Row="1" Grid.Column="0" Header="WEJŚCIE: RGB" Background="White">
                <StackPanel Margin="10" >
                    <!-- R -->
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="R" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold"/>
                        <Slider x:Name="RSlider" Grid.Column="1" Minimum="0" Maximum="255" Height="36"
              TickFrequency="16" TickPlacement="BottomRight"
              LargeChange="16" SmallChange="1"
              ValueChanged="RSlider_ValueChanged"/>
                        <TextBox x:Name="RBox" Grid.Column="2" FontSize="16" Margin="10,0,0,0"
               TextChanged="RBox_TextChanged"/>
                    </Grid>

                    <!-- G -->
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="G" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold"/>
                        <Slider x:Name="GSlider" Grid.Column="1" Minimum="0" Maximum="255" Height="36"
              TickFrequency="16" TickPlacement="BottomRight"
              LargeChange="16" SmallChange="1"
              ValueChanged="GSlider_ValueChanged"/>
                        <TextBox x:Name="GBox" Grid.Column="2" FontSize="16" Margin="10,0,0,0"
               TextChanged="GBox_TextChanged"/>
                    </Grid>

                    <!-- B -->
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="B" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold"/>
                        <Slider x:Name="BSlider" Grid.Column="1" Minimum="0" Maximum="255" Height="36"
              TickFrequency="16" TickPlacement="BottomRight"
              LargeChange="16" SmallChange="1"
              ValueChanged="BSlider_ValueChanged"/>
                        <TextBox x:Name="BBox" Grid.Column="2" FontSize="16" Margin="10,0,0,0"
               TextChanged="BBox_TextChanged"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- CMYK (WEJŚCIE) -->
            <GroupBox Grid.Row="1" Grid.Column="1" Header="WEJŚCIE: CMYK (w %)" Background="White">
                <StackPanel Margin="10">
                    <!-- C -->
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="C" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold"/>
                        <Slider x:Name="CSlider" Grid.Column="1" Minimum="0" Maximum="100" Height="36"
              TickFrequency="10" TickPlacement="BottomRight"
              LargeChange="10" SmallChange="1"
              ValueChanged="CSlider_ValueChanged"/>
                        <TextBox x:Name="CBox" Grid.Column="2" FontSize="16" Margin="10,0,0,0"
               TextChanged="CBox_TextChanged"/>
                    </Grid>

                    <!-- M -->
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="M" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold"/>
                        <Slider x:Name="MSlider" Grid.Column="1" Minimum="0" Maximum="100" Height="36"
              TickFrequency="10" TickPlacement="BottomRight"
              LargeChange="10" SmallChange="1"
              ValueChanged="MSlider_ValueChanged"/>
                        <TextBox x:Name="MBox" Grid.Column="2" FontSize="16" Margin="10,0,0,0"
               TextChanged="MBox_TextChanged"/>
                    </Grid>

                    <!-- Y -->
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Y" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold"/>
                        <Slider x:Name="YSlider" Grid.Column="1" Minimum="0" Maximum="100" Height="36"
              TickFrequency="10" TickPlacement="BottomRight"
              LargeChange="10" SmallChange="1"
              ValueChanged="YSlider_ValueChanged"/>
                        <TextBox x:Name="YBox" Grid.Column="2" FontSize="16" Margin="10,0,0,0"
               TextChanged="YBox_TextChanged"/>
                    </Grid>

                    <!-- K -->
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="K" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold"/>
                        <Slider x:Name="KSlider" Grid.Column="1" Minimum="0" Maximum="100" Height="36"
              TickFrequency="10" TickPlacement="BottomRight"
              LargeChange="10" SmallChange="1"
              ValueChanged="KSlider_ValueChanged"/>
                        <TextBox x:Name="KBox" Grid.Column="2" FontSize="16" Margin="10,0,0,0"
               TextChanged="KBox_TextChanged"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- PODGLĄD + WYNIK KONWERSJI -->
            <GroupBox Grid.Row="2" Grid.ColumnSpan="2" Header="Podgląd i wynik konwersji" Background="White" Margin="0,10,0,0">
                <DockPanel LastChildFill="True" Margin="8">
                    <Border x:Name="ColorPreview" Width="200" Height="120" CornerRadius="8" Background="Black" Margin="2,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="Wejście / kolor bieżący:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBlock x:Name="RgbLabel" Text="RGB: 0, 0, 0" FontSize="16" />
                        <TextBlock x:Name="HexLabel" Text="#000000" FontSize="16" Margin="0,0,0,8"/>
                        <Separator Margin="0,4"/>
                        <TextBlock Text="Wynik konwersji:" FontWeight="SemiBold" Margin="0,4,0,4"/>
                        <TextBlock x:Name="CmykLabel" Text="CMYK: 0, 0, 0, 100" FontSize="16" />
                    </StackPanel>
                </DockPanel>
            </GroupBox>
        </Grid>
    </Border>
</Window>
