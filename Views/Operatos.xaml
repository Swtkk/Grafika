<Window x:Class="Graf.Views.Operators"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graf.Views"
        mc:Ignorable="d"
        Title="Operatory morfologiczne" Height="450" Width="800"
        Background="#020617" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Kolory bazowe -->
        <SolidColorBrush x:Key="BackgroundMainBrush" Color="#020617"/>
        <!-- tło okna -->
        <SolidColorBrush x:Key="PanelBrush"           Color="#020617"/>
        <!-- prawa kolumna -->
        <SolidColorBrush x:Key="ButtonBrush"          Color="#020617"/>
        <SolidColorBrush x:Key="ButtonBorderBrush"    Color="#1E293B"/>
        <SolidColorBrush x:Key="ButtonHoverBrush"     Color="#0F172A"/>
        <SolidColorBrush x:Key="TextBrush"            Color="#E5E7EB"/>

        <!-- Styl przycisków -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ButtonBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ButtonHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl tekstów -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>

        <!-- Styl textboxa -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="#020617"/>
            <Setter Property="BorderBrush" Value="#1E293B"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundMainBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Podgląd obrazu -->
        <Grid Grid.Column="0" Margin="10">
            <Border Background="#020617" BorderBrush="#1E293B" BorderThickness="1" CornerRadius="6">
                <Image x:Name="displayedImage" Stretch="Uniform"/>
            </Border>
        </Grid>

        <!-- Panel sterowania -->
        <Border Grid.Column="1"
                Background="{StaticResource PanelBrush}"
                Padding="10,15,15,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Wczytywanie obrazu -->
                <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                        x:Name="LoadImage"
                        Content="Wczytaj obraz"
                        Margin="5,0,5,10"
                        Click="LoadImage_Click"/>

                <!-- Maska -->
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,10">
                    <TextBlock Text="Maska:"
                               Margin="5,0,5,5"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               FontSize="18"
                               FontWeight="Bold"/>
                    <TextBox Name="StructuringElementSize"
                             Text="0 1 0 1 1 1 0 1 0"/>
                </StackPanel>

                <!-- Przyciski operatorów -->
                <Button Grid.Row="2" Grid.Column="0"
                        x:Name="Dilatation"
                        Content="Dylatacja"
                        Click="Dilatation_Click"/>
                <Button Grid.Row="2" Grid.Column="1"
                        x:Name="Erosion"
                        Content="Erozja"
                        Click="Erosion_Click"/>

                <Button Grid.Row="3" Grid.Column="0"
                        x:Name="Opening"
                        Content="Otwarcie"
                        Click="Opening_Click"/>
                <Button Grid.Row="3" Grid.Column="1"
                        x:Name="Closing"
                        Content="Domknięcie"
                        Click="Closing_Click"/>

                <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                        x:Name="HitOrMiss"
                        Content="Hit Or Miss"
                        Click="HitOrMiss_Click"/>

                <Button Grid.Row="5" Grid.Column="0"
                        x:Name="Thickening"
                        Content="Pogrubianie"
                        Click="Thickening_Click"
                        Margin="5,10,5,0"/>
                <Button Grid.Row="5" Grid.Column="1"
                        x:Name="Thinning"
                        Content="Pocienianie"
                        Click="Thinning_Click"
                        Margin="5,10,5,0"/>

            </Grid>
        </Border>
    </Grid>
</Window>
