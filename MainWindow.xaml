<Window x:Class="Graf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grafika – wybór modułu" Height="360" Width="520" WindowStartupLocation="CenterScreen">
    <Grid Background="#0B0F1A">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Wybierz moduł"
                   Foreground="White" FontSize="28" FontWeight="Bold"
                   Margin="20" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="OpenCanvasBtn" Content="🖊️  Canvas (rysowanie)"
            Padding="18,12" FontSize="16" Width="220" Margin="10"
            Click="OpenCanvasBtn_Click"/>
            <Button x:Name="OpenPpmBtn" Content="🖼️  PPM (obrazy/kolory)"
            Padding="18,12" FontSize="16" Width="220" Margin="10"
            Click="OpenPpmBtn_Click"/>
        </StackPanel>


        <TextBlock Grid.Row="2" Foreground="#9FB0C6" FontSize="12" Margin="12"
                   Text="Moduł 1: prymitywy graficzne z edycją i zapisem  •  Moduł 2: PPM/JPEG + podgląd kolorów" />
    </Grid>
</Window>
